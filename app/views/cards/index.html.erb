<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <div class="card mb-3" style="max-width: 18rem; background: <%= card.color %>">
        <div class="card-body">
          <h5 class="card-title"><%= link_to card.name, card %></h5>
          <%= link_to 'Edit', edit_card_path(card), class: 'btn btn-light' %>
          <%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
